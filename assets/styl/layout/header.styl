.header
    display flex
    position relative
    width calc(100% - navWidth)
    margin-left navWidth
    height 119px
    background-color white
    justify-content space-between
    transition 0.3s ease
    border-left 1px solid #f8f8f8
    .header-left
        display flex
        position relative
        width 20%
        height 100%
        padding 35px 5px
        .toggle-nav
            font-size 1.5rem
            margin 0 30px
        .name-page 
            margin 0 8px
            font-size 2rem
            font-weight 700
    .header-right
        display flex
        position relative
        height 100%
        padding 30px 15px
        .search
            display block
            position relative
            width 19.75rem
            height 3.75rem
            margin 0 10px
            form
                width 100%
                height 100%
                label
                    .search-input
                        width 100%
                        height 100%
                        border-radius 3.125rem
                        padding 0 20px
                        padding-right 50px
                        background-color #eeeeee
                    .search-input::placeholder
                        font-size 0.8rem
                        font-weight 400
                        line-height 1.5
                .search-icon
                    font-size 1.150rem
                    position absolute
                    top 18px
                    right 17px
                    color grayCol
        .header-btns
            button
                width 48px
                height 48px
                margin 6px 18px
        .user
            display flex
            margin-left 0.875rem
            .user-pic
                    height 3.75rem
                    width 3.75rem
                    border-radius 4.25rem
                    
            .user-info
                padding 0.6rem 9px
                .name-user
                    font-weight 600
                    font-size 1.125rem
                .mail-user
                    font-size 0.75rem
                    font-weight 400