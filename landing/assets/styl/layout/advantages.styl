.advantages
  position relative
  display flex
  // padding 0 126.6px 99.07px 130.4px
  padding-bottom 99.07px
  background-color #EDEDED//0.2 opacity
  mix-blend-mode normal
  justify-content space-around

  .advs-wrapper
    display flex
    position relative
    flex-direction column
    margin-top -70px
    width 33.8% //586px

    .adv-container
      display flex
      width 100%
      height 167px
      margin-bottom 15px
      padding 10px
      align-items center
      background-color white
      box-shadow 0px 2px 4px rgba(0, 0, 0, 0.08)
      border-radius 4px 4px 5px 5px

      .icon
        margin auto 40px

      .text
        .title
          font-weight bold
          font-size calc(15px + (24 - 15) * (100vw - 15px) / 1360)//24 to 15
          line-height 26px
          color #233247

        .desc
          font-weight normal
          font-size calc(12px + (16 - 12) * (100vw - 12px) / 1360) // 16 to 12
          line-height 21px
          color grayText
          margin 13px 0
    .adv-container:hover
      margin-bottom: 25px
      margin-top: -10px

  .pics
    width 39.4% //663px
    position relative
    margin-top -70px
    .phone-pic
      width 26.9% //179 px
      position absolute
      // bottom 0
      top 36%
      left -50px