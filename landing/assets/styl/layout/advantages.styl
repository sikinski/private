.advantages
  position relative
  display flex
  // padding 0 126.6px 99.07px 130.4px
  padding-bottom 99.07px
  background-color #EDEDED//0.2 opacity
  mix-blend-mode normal
  justify-content space-around

  .advs-wrapper
    display flex
    position relative
    flex-direction column
    margin-top -70px
    width 34.8% //586px

    .adv-container
      display flex
      width 100%
      height 167px
      margin-bottom 15px
      padding 30px 30px 30px 0
      align-items center
      background-color white
      box-shadow 0px 2px 4px rgba(0, 0, 0, 0.08)
      border-radius 4px 4px 5px 5px

      .icon
        margin auto 40px

      .text
        .title
          font-weight bold
          font-size 24px
          line-height 26px
          color #233247

        .desc
          font-weight 400
          font-size 16px
          line-height 21px
          color grayText
          margin 13px 0
