.demo-access
  position relative
  background-color #E5E5E5
  padding 103px 147px 125px 133px

  .block
    display flex
    position relative
    width 100%
    background-color white
    justify-content space-between
    box-shadow 0px 16px 32px rgba(0, 0, 0, 0.08)

    .text-wrapper
      padding 123px 0 103px 61px
      width 48.5%

      .title
        font-weight bold
        font-size 32px
        color #233247

      .green-line-desc
        margin-top 102px
        max-width 83%

    .inputs
      position relative
      width 50.5%
      padding 123px 0 103px 0
      border-left 2px solid #E5E5E5
      text-align center

      input 
        width 82%//579px
        height 48px
        border 1px solid #E5ECED
        box-shadow 0px 1px 6px rgba(0, 0, 0, 0.06)
        border-radius 2px
        padding-left 16px
        font-size 16px 
        font-weight normal
        color #233247
        margin 6px auto

      input::placeholder
        font-size 16px
        color #586981

      .phone-num
        display flex
        position relative
        width 82%
        margin 0 auto

        .country-code
          width 38% //220px

        .number 
          width 61%
          margin-left 8px

      .get-demo-access
        width 343px
        height 64px
        margin-left 33%
        margin-top 54px
        font-weight 600
        font-size 16px
        line-height 22px
        letter-spacing 0.2px
        text-transform uppercase