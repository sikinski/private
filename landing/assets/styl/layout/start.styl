.start
  position relative
  height 812px
  padding 30.5px 75px 30.5px 73px
  background-image url(/images/start_bg.png)
  background-size cover
  background-position-x center
  background-repeat no-repeat
  color white

  .header
    display flex
    position relative
    width 100%
    justify-content space-between

    .logo-wrapper
      display flex
  
    .header-btns
      display flex
      position relative

      .language-btn
        display flex
        margin 0 54px

        .flag-country
          width 35.5px
          height 35.5px
          margin auto 0
          margin-right 18px
          
        .name-language
          margin auto 0
          font-weight 600
          font-size 16px
          line-height 20px
          color white

      .sign-in-btn
        width 160px
        height 44px
        margin 10px 0
        border 1.5px solid #FFFFFF
        box-shadow inset 0px 2px 0px rgba(255, 255, 255, 0.06)
        font-size 16px
        line-height 22px
        color white

  .start-main
    padding 29.5px 93.4px

    .heading
      max-width 80%
      font-size 72px
      line-height 81px
      text-shadow 0px 1px 4px rgba(0, 0, 0, 0.25)
      font-weight bold

    .desc
      color almostWhite
      font-size 24px
      line-height 36px
      padding 29.33px 0
      max-width 52%

    .search
      display flex
      position relative
      height 64px
      margin 30.6px 0

      form
          .name-or-TIN-input
            width 605px
            height 100%
            border-radius 32px
            padding 21px 38.5px
            font-weight 600
            font-size 16px
            line-height 22px

          .name-or-TIN-input::placeholder
            font-weight 600
            font-size 16px
            line-height 22px
            letter-spacing 0.2px
            text-transform uppercase
            color placeholderCol
            
          .search-company-btn
            width 343px
            height 100%
            margin 0 16.5px
            font-weight 600
            font-size 16px
            line-height 22px
            letter-spacing 0.2px
            text-transform uppercase