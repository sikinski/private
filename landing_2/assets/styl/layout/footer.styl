.footer
    background-color #E5E5E5
    .inner-block
        display flex
        height 150px
        padding 0 89.5px 0 106px
        justify-content: space-between
        a
            display flex
            position relative
            align-items center
            .logo-text
                font-family 'AvertaStd'
                font-style: normal
                font-weight: 600
                font-size: 35px
                color: #586981
                .ved-text
                    font-weight: bold
    .copyright
        margin auto 0
        margin-left 45%
        font-family 'AvertaStd'
        font-weight: normal
        font-size: 14px
        letter-spacing: 0.0875px
        color: #586981
    .terms-of-use
        font-family 'AvertaStd'
        font-weight: 600
        font-size: 14px
        letter-spacing: 0.0875px
        color: #F81680
        right 0