.demo-access
    position relative
    background-color #E5E5E5
    .inner-block
        height 1000px
        .block-wrapper
            display block
            position relative
            width 1291px
            height 684px
            margin auto 13% auto 15% //-37.5%
            .content-block
                display flex
                position absolute
                width 1291px
                // top -37.5%
                padding 59px 83px 121px 93px
                background: #FCFCFC;
                box-shadow: 0px 4px 48px rgba(0, 0, 0, 0.04);
                border-radius: 49px;
                justify-content: space-between
                z-index 9999
                .text-wrapper
                    width 41%
                    .title
                        font-weight: bold;
                        font-size: 36px;
                        line-height: 44px;
                        color: #233247;
                        .pink-border
                            border-bottom 7px solid pinkCol
                    .desc
                        padding 51px 0
                        font-weight: bold;
                        font-size: 30px;
                        line-height: 39px;
                        color #979797
                .inputs
                    display flex
                    position relative
                    flex-direction: column
                    width 39%
                    form
                        .phone-num
                            display flex
                            position relative
                            margin 6px auto
                            align-items: center
                            .country-code
                                width 38%
                            .number
                                width 62%
                        input, .phone-num
                            width 100%
                            height 48px
                        input 
                            margin 6px auto
                            border: 1px solid #E5ECED;
                            box-sizing: border-box;
                            box-shadow: 0px 1px 6px rgba(0, 0, 0, 0.06);
                            border-radius: 2px;
                        input::placeholder
                            font-weight: normal;
                            font-size: 16px;
                            line-height: 19px;
                            color: #586981;