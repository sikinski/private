.indicators
    position relative
    background-color #E5E5E5

    .content-block
        display flex
        position relative
        background rgba(255, 255, 255, 0.79)
        box-shadow 0px 4px 48px rgba(0, 0, 0, 0.04)
        border-radius 49px
        padding 53px 0 28px 88px
        justify-content space-between
        margin-bottom 55px

        .text-wrapper
            max-width 60%
            margin-bottom 48px

            .overhead-text
                font-weight bold
                font-size 31px
                line-height 30px
                letter-spacing 0.16px
                color #3F85DD
                margin-bottom 40px

            .title
                padding 56px 0
                font-weight bold
                font-size 36px
                line-height 39px
                color #233247
                // max-width 60%
            .desc
                font-weight bold
                font-size 36px
                line-height 39px
                color #909090
        .pic-wrapper
            display flex
            position relative
            width 36%
            height 713px
            margin-top 54px
            align-items center
            min-height 100%
            .phone-pic
                display block
                position absolute
                // width 430px
                // height 860px
                transform translate(3%, 4%)

        .pagination
            display flex
            position absolute
            left 50%
            transform translateX(-50%)
            bottom 30px

            .pag-item
                width 16px
                height 16px
                margin 0 10px
                border-radius 50%
                background-color #C4C4C4

            .active
                background-color #3F85DD