// --- Adaptive for small screens ---
@media only screen and (max-width 780px)
    //----- HEADER -----
    .header
        height 60px
        a
            margin-left 50px
    //----- START -----
    .start
        height 580px

        .inner-block
            padding-left 50px
            padding-top 60px

            .content

                .heading
                    font-size 40px
                    line-height 40px

                .subtitle
                    font-size 16px
                    line-height 20px
                    padding 25px 0

                .search
                    height 50px

            .pic-side

                .block
                    width 220px
                    height 214px
    //----- ADVANTAGES -----
    .advantages

        .inner-block

            .text-wrapper
                padding 0 60px

                .heading
                    font-size 38px
                    line-height 42px

                .subtitle
                    font-size 32px
                    line-height 38px

                .desc
                    font-size 22px

            .cards-wrapper
                padding 0 40px
                grid-gap 20px 25px
                padding 0 30px
                grid-auto-rows minmax(50px, auto) 
                .accurate-statistics
                    padding 60px 40px

                    .title
                        font-size 46px
                        line-height 42px
                        max-width 55%
                    .card-desc
                        font-size 24px
                        line-height 26px
                        max-width 55%
                    .small-text
                        padding-top 14px
                        margin-top 80px
                        font-size 16px
                        max-width 60%
                .pics
                    display flex
                    width 30%
                    align-items center
                    justify-content center
                    transform translate(-20%, 5%)

                    .pc-version-pic
                        display none

                    .mobile-version-pic
                        top auto
                        left auto
                        width 100%
                        position relative

                .card-2, .card-3
                    padding 50px 40px

                    .title
                        font-size 28px
                        line-height 26px
                        max-width 100%
                    .card-desc
                        font-size 26px
                        line-height 28px

                    .phone-pic
                        display none
    //----- KEY-CAPABILITIES -----
    .keys-padding
        padding 0 50px 23px 50px

    .key-capabilities

        .inner-block
            padding-top 85px 
            .subtitle
                max-width 90%
            .container
                margin-top 56px
                padding 30px 48px 65px 48px

                .keys

                    .key
                        margin-top 65px

                        .text
                            padding-top 23px
                            font-size 28px
                            line-height 32px

                .pic-wrapper
                    display none
    //----- INDICATORS -----
    .indicators

        .inner-block

            .content-block
                padding 53px 0 28px 48px

                .text-wrapper
                    max-width 70%
                    margin-bottom 48px

                    .overhead-text
                        font-size 18px
                        line-height 16px

                    .title
                        padding 36px 0
                        font-size 28px
                        line-height 30px

                    .desc
                        font-size 26px
                        line-height 28px

                .pic-wrapper

                    .phone-pic
                        width 359px
                        height 710px

                .pagination

                    .pag-item
                        width 12px
                        height 12px
    //----- VEDPROFILE-API -----
    .vedprofile-API

        .inner-block
            margin-bottom 88px

            .content-block
                padding 42px 38px 0 35px

                .left-side
                    height auto

                    .overhead-text
                        font-size 16px
                        line-height 24px
                        padding-bottom 20px

                    .phone-pic
                        position relative
                        margin auto auto

                .text-wrapper

                    .title
                        font-size 24px
                        line-height 28px
                        br
                            display none

                    .desc
                        padding 43px 0 23px 0
                        font-size 24px
                        line-height 26px

                    .find-data-btn
                        height 47px
                        margin-top 34px
                        font-size 14px
    //----- NUMBERS -----
    .numbers
        &::before 
            opacity 0.3
            background-position-y center
        .inner-block
            padding 55px 0 120px 0
            .numbers-wrapper
                width 400px
                grid-gap 30px 40px 
                .number-block
                    flex-direction column
                    .number
                        font-size 35px
                        text-align: center
                    .text 
                        font-size 10px
                        line-height 13px
                        text-align: center
                        margin-left 0
                        margin-top 4px

