.start
    position relative
    .header
        display flex
        position relative
        width 100%
        height 100px
        background-color #E5ECED
        justify-content space-between
        align-items center
        .logo
            width 292px
            height 43px
            margin-left 102px
        .buttons
            display flex
            position relative
            .language
                display flex
                align-items center
                height 44px
                font-family 'AvertaStd'
                font-weight 600
                font-size 16px
                color #586981
                margin 0 9px

                .flag
                    width 35.5px
                    height 35.5px
                    margin 0 18px
            .sign-in
                width 160px
                height 44px
                box-shadow inset 0px 2px 0px rgba(255, 255, 255, 0.06)
                border-radius 22px
                font-family 'AvertaStd'
                font-weight 600
                font-size 24px
                margin 0 45px