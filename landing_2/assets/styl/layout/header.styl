.header
  position relative
  width 100%
  height 62px
  background-color #E5ECED
  
  .inner-block
    display flex
    justify-content space-between
    align-items center
    height 100%
    a
      display flex
      align-items center
      margin-left 102px

      .logo-text
        font-family 'AvertaStd'
        font-weight 400
        font-size 35px
        color #586981
        margin-left 8px

        .ved-text
          font-family 'AvertaStd'
          font-weight 600
          font-size 35px
          color #586981

    .sign-in
      width 123px
      height 34px
      border: 3px solid #586981;
      box-shadow: inset 0px 1.54545px 0px rgba(255, 255, 255, 0.06);
      border-radius: 17px;
      font-weight 600
      font-weight: bold;
      font-size: 14px;
      line-height: 10px;
      margin 0 127px
      color #586981