.header
  position relative
  width 100%
  height 100px
  background-color #E5ECED
  
  .inner-block
    display flex
    justify-content space-between
    align-items center
    height 100%
    a
      display flex
      align-items center
      margin-left 102px

      .logo-text
        font-family 'AvertaStd'
        font-weight 400
        font-size 35px
        color #586981
        margin-left 8px

        .ved-text
          font-family 'AvertaStd'
          font-weight 600
          font-size 35px
          color #586981

    .sign-in
      width 160px
      height 44px
      box-shadow inset 0px 2px 0px rgba(255, 255, 255, 0.06)
      border-radius 22px
      font-family 'AvertaStd'
      font-weight 600
      font-size 24px
      margin 0 45px