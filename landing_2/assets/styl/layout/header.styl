.header
  position relative
  width 100%
  height 62px
  background-color #E5ECED

  .inner-block
    display flex
    justify-content space-between
    align-items center
    height 100%
    a
      display flex
      align-items center

      .logo-text
        font-family 'AvertaStd'
        font-weight 400
        font-size 35px
        color #586981
        margin-left 8px

        .ved-text
          font-family 'AvertaStd'
          font-weight 600
          font-size 35px
          color #586981

    .nav-wrapper
      display flex
      position relative
      height 100%
      align-items center
      .item
        margin-right 20px
        font-size 20px
        transition 1s
        color rgb(108, 108, 108)
        &:hover
          font-size 22px

    .search 
      position relative
      display flex
      width 28%
      height 100%
      align-items center
      transition width 1s ease-in-out, left 1.5s ease-in-out
      opacity 0.8

      form 
        height 65%
        width 100%
        input 
          position relative
          width 100%
          height 100%
          padding 1px 10px
          outline none
          padding-left 45px
          transition width 1s ease-in-out, left 1.5s ease-in-out
          border-radius 15px
          font-size 20px
          &::placeholder
            margin-top 5px
            font-size 18px

        .search-icon 
          position absolute
          background-image url(/icons/search.svg)
          background-size contain
          width 25px 
          height 25px
          left:8px
          top 29%

    .sign-in
      width 123px
      height 34px
      border: 3px solid #586981;
      box-shadow: inset 0px 1.54545px 0px rgba(255, 255, 255, 0.06);
      border-radius: 17px;
      font-weight 600
      font-weight: bold;
      font-size: 14px;
      line-height: 10px;
      color #586981