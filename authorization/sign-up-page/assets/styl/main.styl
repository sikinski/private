@import 'modules/reset'
@import 'modules/typography'

body
    display flex
    min-height 100vh
    padding 0
    margin 0
    justify-content center
    align-items center
    font-family sans-serif

.hidden
  display none

.auth-form-wrapper
    padding 2rem
    max-width: 420px
    border 1px solid silver
    border-radius 1rem
    margin 0 .5rem

    .oauth
      .title
        font-size 14px
        text-align center
        font-weight normal

      .socials
        display grid
        grid-auto-flow: column
        grid-auto-columns: min-content
        gap .5rem
        margin 1rem 0
        justify-content center

        .social-btn
          display flex
          justify-content center
          align-items center
          border-radius 50px
          padding .5rem 1rem
          transition .24s transform ease-in-out
          will-change: transform
          transform scale(1)
          //TODO: will-change
          .btn-text
            margin-left 8px
          &:focus, &:hover
            transform scale(1.05)

        @media (max-width 400px) 
          .social-btn
            padding 0
            height 2rem
            width 2rem
            .btn-text
              display none
          
        .google-btn
          border 1px solid silver

        .facebook-btn
          background-color #3b5998
          color #fff

        .vk-btn
          background-color rgb(0, 119, 255)
          color #fff
    
    .delimiter
      text-align center
      font-size 14px
        
    .auth-form
      display grid
      justify-items center
      margin 1rem 0
      gap .75rem

      .input
        width 90%
        padding 0.5rem
        outline none
        border 1px solid silver
        border-radius 10px
        text-align center
        transition .5s width ease-in-out
        &:focus  
          width 100%

      .btn
        border-radius 42px
        background-color #4080FF
        color #fff
        padding 0.5rem 1rem
        transition .24s transform ease-in-out
        will-change: transform

        &:focus, &:hover
          transform scale(1.05)

        &[disabled]
          background-color rgb(190, 152, 152)

      .resend-code-btn
        background-color transparent
        color #000
        border-bottom 1px solid silver
        border-radius 0
        padding 0.15rem 0
        font-size 12px
    
    .no-account
      margin-top 1rem
      font-size 14px
      text-align center
      a
        color darken(#4080FF, 30%)
        transition .24s color ease-in-out
        &:hover, &:focus
          color #4080FF